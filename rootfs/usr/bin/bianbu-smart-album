#set -e
#set -x
entry_point=$(basename ${BASH_SOURCE[0]})

cmd=$1
shift

#xdg-user-dirs-update
test -f ${XDG_CONFIG_HOME:-~/.config}/user-dirs.dirs && . ${XDG_CONFIG_HOME:-~/.config}/user-dirs.dirs

function auto_desktop() {
  desktop=$1
  shortcut=$(basename $desktop)
  if [[ ! -f ${XDG_CONFIG_HOME:-~/.config}/${entry_point}/applications/${shortcut%.desktop}-initial-setup-done ]]; then
    xdg-desktop-icon install --novendor ${desktop}
    gio set $(xdg-user-dir DESKTOP)/${shortcut} metadata::trusted true
  fi
  if [[ -f $(xdg-user-dir DESKTOP)/${shortcut} ]]; then
    mkdir -p ${XDG_CONFIG_HOME:-~/.config}/${entry_point}/applications
    touch ${XDG_CONFIG_HOME:-~/.config}/${entry_point}/applications/${shortcut%.desktop}-initial-setup-done
  fi
  # copy default application settings for user
  if [[ ! -f ${XDG_CONFIG_HOME:-~/.config}/${entry_point}/settings.json ]]; then
    cp -rf /usr/share/${entry_point}/settings.json ${XDG_CONFIG_HOME:-~/.config}/${entry_point}/settings.json
  fi
  if [[ ! -f ${XDG_CONFIG_HOME:-~/.config}/${entry_point}/assets ]]; then
    cp -rf /usr/share/${entry_point}/assets ${XDG_CONFIG_HOME:-~/.config}/${entry_point}/
  fi
  if [[ ! -f ${XDG_CONFIG_HOME:-~/.config}/${entry_point}/output.json ]]; then
    echo "[]" > ${XDG_CONFIG_HOME:-~/.config}/${entry_point}/output.json
  fi
}

if [[ $cmd == "desktop" ]]; then
  auto_desktop $@
else
  # reset workspace which should contain "settings.json"
  workspace=${XDG_CONFIG_HOME:-~/.config}/${entry_point}
  # cmd should be the backend name
  python3 /usr/bin/${entry_point}-$cmd/main.py $workspace
fi
